<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
<class name="Customer" table="customer">
    <id name="id" column="id">
        <generator class="native"/>
    </id>
    <joined-subclass name="RealCustomer" table="real_customer">
        <key column="customer_id"/>
        <property name="firstName" type="string" column="first_name"/>
        <property name="lastName" type="string" column="last_name"/>
        <property name="fatherName" type="string" column="father_name"/>
        <property name="dateOfBirth" column="birth_date"/>
        <property name="nationalCode" type="string" column="national_code"/>
    </joined-subclass>
    <joined-subclass name="LegalCustomer" table="legal_customer">
        <key column="customer_id"/>
        <property name="companyName" type="string" column="company_name"/>
        <property name="registerDate" column="register_date"/>
        <property name="economicCode" type="string" column="economic_code"/>
    </joined-subclass>
</class>

    <class name="LoanType" table="loan_type">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" type="string" column="name"/>
        <property name="interestRate" type="int" column="interest_rate"/>
        <set name="grantConditions" table="grant_condition" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id" not-null="true"></column>
            </key>
            <one-to-many class="GrantCondition"/>
        </set>

    </class>

    <class name="GrantCondition" table="grant_condition">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="loanType" class="LoanType" fetch="select" column="loan_type_id" not-null="true"/>
        <property name="name" column="name"/>
        <property name="minDuration" column="MinTime"/>
        <property name="maxDuration" column="MaxTime"/>
        <property name="minAmount" column="MinAmount"/>
        <property name="maxAmount" column="MaxAmount"/>
    </class>
</hibernate-mapping>